@model IEnumerable<EMS.Core.Entities.UserManagement.ModuleMaster>
<div class="box-body">

    <table id="userTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Select
               
                </th>
                <th>Module Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {

                <tr>
                    <td>
                        <input type="hidden" id="_hdnRoleId" name="roleId" value="@data.RoleId" />
                        @if (data.IsMapped)
                        {
                            <input type="checkbox" value="@data.Id"  name="moduleId" checked="checked" />
                        }
                        else
                        {
                            <input type="checkbox" name="moduleId" value="@data.Id" />
                        }

                    </td>
                    <td>
                        @data.ModuleName
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

